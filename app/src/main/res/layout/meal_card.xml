<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView__mealcard"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_margin="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView__mealcard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView__mealcard"
        app:layout_constraintTop_toTopOf="@+id/imageView__mealcard"
        tools:text="TextView" />

    <TextView
        android:id="@+id/textView__mealcard_description"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView__mealcard"
        app:layout_constraintTop_toBottomOf="@+id/textView__mealcard_name"
        tools:text="TextView" />

    <TextView
        android:id="@+id/textView__mealcard_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/price_background"
        android:padding="8dp"
        android:textColor="@color/pink"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView__mealcard"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="от 250 руб" />

    <View
        android:id="@+id/first_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darker_white"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView__mealcard" />

</androidx.constraintlayout.widget.ConstraintLayout>